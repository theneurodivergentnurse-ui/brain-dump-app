<html>
<head>
  <meta charset="UTF-8">
  <title>To-Do List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .task-card {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      color: #000;
    }
    .task-title {
      font-weight: bold;
      font-size: 1.1rem;
    }
    .task-actions {
      margin-top: 0.5rem;
    }
  </style>
</head>
<body class="container py-4">
  <h1 class="mb-4">üìã To-Do List</h1>
  <div id="todoList"></div>

  <script>
    const colors = {
      Red: '#FF4C4C',
      Yellow: '#F9D342',
      Green: '#4CAF50',
      Blue: '#82CAFF'
    };

    function loadTasks() {
      const listContainer = document.getElementById("todoList");
      listContainer.innerHTML = "";

      const allTasks = JSON.parse(localStorage.getItem("tasks") || "[]");
      const activeTasks = allTasks.filter(task => !task.completed);

      if (activeTasks.length === 0) {
        listContainer.innerHTML = "<p class='text-muted'>No active tasks yet.</p>";
        return;
      }

      activeTasks.forEach((task, index) => {
        const taskCard = document.createElement("div");
        taskCard.className = "task-card";
        taskCard.style.background = colors[task.quadrant] || "#eee";

        taskCard.innerHTML = `
          <div class="task-title">${task.title}</div>
          <div>${task.desc || ""}</div>
          ${task.reminder ? `<div class="text-muted">‚è∞ ${task.reminder}</div>` : ""}
          <div class="task-actions">
            <button class="btn btn-sm btn-success" onclick="markDone(${index})">‚úîÔ∏è Mark as Done</button>
          </div>
        `;
        listContainer.appendChild(taskCard);
      });
    }

    function markDone(index) {
      let allTasks = JSON.parse(localStorage.getItem("tasks") || "[]");
      const activeTasks = allTasks.filter(task => !task.completed);
      const taskToComplete = activeTasks[index];

      const fullIndex = allTasks.findIndex(t => t.title === taskToComplete.title && !t.completed);
      if (fullIndex >= 0) {
        allTasks[fullIndex].completed = true;
        allTasks[fullIndex].completedAt = new Date().toISOString();
        localStorage.setItem("tasks", JSON.stringify(allTasks));
        loadTasks();
      }
    }

    loadTasks();
  </script>
</body>
</html>
