<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Brain Dump â€“ Toâ€‘Do List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .task {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      color: #000;
    }
    .task-title { font-weight: bold; font-size:1.1rem; }
    .task-actions { margin-top:0.5rem; }
    .completed { text-decoration: line-through; opacity: 0.6; }
  </style>
</head>
<body class="container py-4">
  <h1 class="mb-4">ðŸ“‹ Toâ€‘Do List</h1>
  <div id="taskList"></div>
  <script>
    const reminderMap = {
      '1h': {label: 'Remind in 1 hour', color: '#FF4C4C'},
      '1d': {label: 'Remind in 1 day', color: '#F9D342'},
      '1w': {label: 'Remind in 1 week', color: '#4CAF50'},
      '2w': {label: 'Remind in 2 weeks', color: '#82CAFF'}
    };

    function loadTasks() {
      const listEl = document.getElementById('taskList');
      const tasks = JSON.parse(localStorage.getItem('tasks') || '[]');
      if (!tasks.length) {
        listEl.innerHTML = '<p class="text-muted">No tasks yet.</p>';
        return;
      }
      listEl.innerHTML = '';
      tasks.forEach((task, idx) => {
        const div = document.createElement('div');
        div.className = 'task';
        div.style.backgroundColor = reminderMap[task.reminder].color || '#eee';
        if (task.done) div.classList.add('completed');
        div.innerHTML = `
          <div class="task-title">${task.title}</div>
          <div>${task.desc || ''}</div>
          <div><small>${reminderMap[task.reminder].label}</small></div>
          <div class="task-actions">
            <button class="btn btn-sm btn-outline-success me-2" onclick="toggleDone(${idx})">
              ${task.done ? 'Undo' : 'Mark as Done'}
            </button>
            <button class="btn btn-sm btn-outline-secondary" onclick="changeReminder(${idx})">
              Change Reminder
            </button>
          </div>
        `;
        listEl.appendChild(div);
      });
    }

    function toggleDone(index) {
      const tasks = JSON.parse(localStorage.getItem('tasks') || '[]');
      tasks[index].done = !tasks[index].done;
      localStorage.setItem('tasks', JSON.stringify(tasks));
      loadTasks();
    }

    function changeReminder(index) {
      const newVal = prompt('Enter new reminder: 1h, 1d, 1w, 2w');
      if (!reminderMap[newVal]) {
        alert('Invalid choice. Use 1h, 1d, 1w or 2w.');
        return;
      }
      const tasks = JSON.parse(localStorage.getItem('tasks') || '[]');
      tasks[index].reminder = newVal;
      localStorage.setItem('tasks', JSON.stringify(tasks));
      loadTasks();
    }

    window.addEventListener('DOMContentLoaded', loadTasks);
  </script>
</body>
</html>
